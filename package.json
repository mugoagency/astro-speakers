{
  "name": "astro-speakers",
  "version": "1.0.0",
  "author": "Mugo Agency",
  "scripts": {
    "push": "postcss ./postcss/*.css --base postcss --dir ./styles/",
    "watch": "onchange 'tailwind.config.js' './*.html' './postcss/*.css' -- npm run push",
    "build": "NODE_ENV=production postcss ./postcss/*.css --base postcss --dir ./styles/"
  },
  "dependencies": {
    "autoprefixer": "^10.2.1",
    "caniuse-lite": "^1.0.30001585",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "onchange": "^7.1.0"
  }
}
